{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 400,
    "width": 600,
    "data": {"url": "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/data/courses.csv"},
    "transform": [{
        "calculate": "abs(0.5-(datum.Rank))", "as": "rankPlot"
        }],
    "layer": [
        {
            "transform": [{
                "calculate": "datum.PrivPub == 'Public' ? -1 : 0", "as": "xmini"
            },
            {
                "calculate": "datum.PrivPub == 'Private' ? 1 : 0", "as": "xmaxi" 
            }],
            "mark": {"type": "bar", "opacity": 1, "cornerRadius": 20},
            "encoding": {
                "y": {"bin": true, "field": "rankPlot", "type": "nominal", "title": null, "axis": {"tickOpacity": 0, "domain": false, "labelFontSize": 12, "labelFontStyle": "bold", "labelPadding": 12}},
                "x": {"aggregate": "sum", "field": "xmini", "scale": {"domain": [-10, 10]}},
                "x2": {"aggregate": "sum", "field": "xmaxi"},
                "color": {
                    "field": "PrivPub",
                    "legend": null,
                    "scale": {"range": ["#ffffff", "#000000"]}
                }
            }
        }
    ],
    "config": {"background": "#ccecb5", "view": {"stroke": "transparent"}}
}
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "bounds": "flush",
    "padding": 0,
    "params":[
      {
        "name": "State_Select",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Victoria",
            "New South Wales",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Australian Capital Territory"
          ],
          "labels": [
            "Show all",
            "Victoria",
            "New South Wales",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Australian Capital Territory"
          ],
          "name": "State: "
        }
      },
      {
        "name": "XSelect",
        "value": 100,
        "bind": {
          "input": "select",
          "options": [
            100,
            100,
            50,
            25,
            10
          ],
          "labels": [
            "Show All",
            "Top 100",
            "Top 50",
            "Top 25",
            "Top 10"
          ],
          "name": "Range to view: "
        }
      },
      {
                "name": "domVal",
                "value": 0
      }
    ],
    "data": {
          "url":
          "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/js/MapOfAustralia.topojson",
          "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
        },
    "hconcat": [{
        "projection": {"type": "equirectangular"},
        "height": 500,
        "width": "container",
        "layer": [
            {
                "mark": {
                    "type": "geoshape",
                    "fill": "#c0e6ba"
                  }
        },
        {"data": {
            "url": "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/data/stateslong.csv"
          },
            "transform": [
              {
                "lookup": "States",
                "from": {
                  "data": {
                    "url": "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/js/STE_2021_AUST_GDA94.topojson",
                    "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA94"}
                  },
                  "key": "properties.STE_NAME21"
              },
              "as": "geo"
            },
            {
              "filter": "datum.TopX == XSelect"
            }
            ],
            "mark": {"type": "geoshape","stroke": "#ccecb5","strokeWidth": 0.5},
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "color": {
                "field": "Amount",
                "type": "quantitative",
                "scale": {"type": "linear", "domainMax":{"expr":"data('TopX')[0]"}, "domainMin": -5, "scheme": "greens"},
                "legend": null
              },
              "tooltip": [
                {"field": "States", "type": "nominal", "title": "State"},
                {"field": "Amount", "type": "quantitative", "title": "Amount"}
              ]
            }
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/data/courses.csv"},
            "transform": [
              {
                "filter": "State_Select == null || datum.State == State_Select" 
              },
              {
                "filter": "datum.Rank < XSelect + 1"
              }
            ],
            "mark": {"type": "circle", "opacity": 0.5, "size": 1},
            "encoding": {
              "longitude": {"field": "Longitude", "type": "quantitative"},
              "latitude": {"field": "Latitude", "type": "quantitative"},
              "size": {"value": 40},
              "color": {"value": "black"},
              "tooltip": [{"field": "Course", "type": "nominal", "title": "Course"}, {"field": "Rank", "type": "quantitative"}]
            }
          }]
    },
    {
        "height": 500,
        "width": "container",
        "layer": [{
            "data": {"url": "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/data/courses.csv"},
            "mark": {"type": "bar", "opacity": 1, "width": {"band": 0.8}, "cornerRadiusTopRight": 20, "cornerRadiusBottomRight": 20},
            "transform": [{
                        "filter": {
                            "field": "Rank",
                            "lte": {"expr": "XSelect"}
                        }
                    },
                {
                    "aggregate": [{
                        "op": "count",
                        "as": "myCount",
                        "field": "Shorthand"
                    }],
                    "groupby": ["Shorthand"]
                }],
            "encoding": {
                "y": {"field": "Shorthand", "type": "nominal","title": null, "axis": {"tickOpacity": 0, "domain": false, "labelFontSize": 18, "labelFontStyle": "bold", "labelPadding": 24}},
                "x": {"field": "myCount", "type": "quantitative", "scale": {"domainRaw": {"expr": "domVal"}}, "title": null, "axis": {"labels": false, "grid": false, "tickOpacity": 0, "domain": false, "orient": "bottom"}},
                "color": {
                "field": "max", "type": "nominal",
                "scale": {"range": ["#107937"]}, "legend": null
            }
                }
            },
            {
                "data": {"url": "https://raw.githubusercontent.com/BCohen7/assignment/main/assignment-two/data/courses.csv"},
                    "mark": {"type": "text", "align": "right", "dx": 30, "fontSize": 20, "fontWeight": "bold", "color": "#107937"},
                    "transform": [{
                        "filter": {
                            "field": "Rank",
                            "lte": {"expr": "XSelect"}
                        }
                    },
                    {
                        "aggregate": [{
                            "op": "count",
                            "as": "myCount",
                            "field": "Shorthand"
                        }],
                    "groupby": ["Shorthand"]
                }],
                    "encoding": {"text": {"field": "myCount"}, "x": {"field": "myCount", "type": "quantitative"}, "y": {"field": "Shorthand"}}
                }
            ]
    }],
    "config": {"background": "#ccecb5", "view": {"stroke": "transparent"}}
}